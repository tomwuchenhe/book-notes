<%- include('partials/header.ejs'); -%>

    <div class="px-5 my-5 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-book mb-3" viewBox="0 0 16 16">
