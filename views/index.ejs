        </svg>
        <h1 class="display-5 fw-bold text-body-emphasis">Seconds Book Notes</h1>
        <div class="col-lg-6 mx-auto">
          <p class="lead mb-4">Leave your notes on your favourite book! <strong>Please Create An account to get started</strong></p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    
                    <a class="btn btn-green btn-lg btn-primary" href="/create-note" role="button">Create Note</a>

                    <a class="btn btn-red btn-lg btn-danger" href="/delete-post" role="button">Delete Post</a>

                    <a class="btn btn-dark btn-lg btn-secondary" href="/edit-post" role="button">Edit Post</a>
                </div>
            
        </div>
    </div>
    <% if (posts.length == 0)  {%>
        <div class = "container text-center">
            <h5 class = "lead">Be the first to post!!</h5>
        </div>
    <% } else { %>
        <% for(var i = 0; i <= posts.length-1; i++) { %>
            <div class="container px-4 pb-5 mb-2">
                <div class="row gx-5">
                    <div class="col d-flex justify-content-center">
                        <div class="p-3">
                            <img src = <%= posts[i].imgpath%> />
                        </div>
                    </div>
                <div class="col">
                    <div class = "row gx-5">
                        <div class="p-3 playwrite-ng-modern-title">
                            <%= posts[i].title %>
                        </div>
                    </div>
                    <div class = "row gx-5">
                        <div class="p-3">
                            <%= posts[i].content %>
                        </div>
                    </div>
                    <div class = "row gx-5">
                        <div class="p-3">
                            By <%= posts[i].user_name %>
                        </div>
                        <div class="p-3">
                            PostID <%= posts[i].id %>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        <% } %>
    <% } %>
<%- include('partials/footer.ejs'); -%>